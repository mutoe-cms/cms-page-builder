{
  "name": "cms-page-builder",
  "version": "0.3.0",
  "author": "mutoe <mutoe@foxmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutoe/cms-page-builder.git"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "type-check": "svelte-check",
    "test": "jest src",
    "cy": "cypress",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "pnpm changelog && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.17",
    "@tsconfig/svelte": "^2.0.1",
    "sass": "^1.37.5",
    "svelte": "^3.42.1",
    "svelte-check": "^2.2.4",
    "svelte-preprocess": "^4.7.4",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "vite": "^2.5.0",
    "vite-tsconfig-paths": "^3.3.13"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@mutoe/eslint-config-preset-ts": "^2.2.0",
    "@testing-library/cypress": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/jest": "^26.0.24",
    "cypress": "^8.2.0",
    "eslint": "^8.33.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "svelte-jester": "^1.3.0",
    "ts-jest": "^26.5.6"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "svelte3"
    ],
    "extends": [
      "@mutoe/eslint-config-preset-ts"
    ],
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": "off"
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      },
      {
        "files": ["*.{test,spec,cy}.ts?(x)"],
        "rules": {
          "@typescript-eslint/no-empty-function": "off"
        }
      },
      {
        "parser": "",
        "files": [
          "cypress/**/*.js"
        ],
        "plugins": [
          "cypress"
        ],
        "env": {
          "cypress/globals": true
        }
      }
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,svelte}"
    ]
  },
  "dependencies": {
    "eslint-plugin-cypress": "^2.12.1"
  }
}
