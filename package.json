{
  "name": "cms-page-builder",
  "private": true,
  "version": "0.4.0",
  "author": "mutoe <mutoe@foxmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutoe/cms-page-builder.git"
  },
  "scripts": {
    "prepare": "husky install",
    "preversion": "pnpm lint && pnpm type-check && pnpm test",
    "version": "pnpm run changelog && git add CHANGELOG.md",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint .",
    "type-check": "vue-tsc",
    "test": "pnpm test:unit && pnpm test:component && pnpm test:e2e",
    "test:unit": "vitest run",
    "test:component": "cypress run --component --config-file cypress/cypress.config.ts",
    "pretest:e2e": "pnpm build",
    "test:e2e": "concurrently -rk -s first \"pnpm serve\" \"cypress run --e2e --config-file cypress/cypress.config.ts -c baseUrl=http://localhost:4173\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@mutoe/eslint-config-preset-vue": "~2.3.0",
    "@testing-library/cypress": "^9.0.0",
    "@types/node": "^18",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.28.3",
    "concurrently": "^7.6.0",
    "cypress": "^12.4.1",
    "eslint": "^8.33.0",
    "eslint-plugin-cypress": "^2.12.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "sass": "^1.57.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.28.3",
    "vue-tsc": "^1.0.24"
  },
  "lint-staged": {
    "**/*.{js,ts,json,vue,yml,yaml}": "eslint --fix"
  },
  "eslintIgnore": [
    "public/ionicons",
    "coverage",
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "@mutoe/eslint-config-preset-vue",
      "plugin:cypress/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "rules": {}
      },
      {
        "files": [
          "*.{test,spec,cy}.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ]
  }
}
