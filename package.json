{
  "name": "cms-page-builder",
  "version": "0.3.0",
  "author": "mutoe <mutoe@foxmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutoe/cms-page-builder.git"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "type-check": "svelte-check",
    "test": "jest src",
    "cy": "cypress",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "pnpm changelog && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "sass": "^1.57.1",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-tsconfig-paths": "^4.0.5"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@mutoe/eslint-config-preset-ts": "^2.2.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@types/jest": "^29.4.0",
    "cypress": "^12.4.1",
    "eslint": "^8.33.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "svelte-jester": "^2.3.2",
    "ts-jest": "^29.0.5"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "svelte3"
    ],
    "extends": [
      "@mutoe/eslint-config-preset-ts"
    ],
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": "off"
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3",
        "rules": {
          "no-multiple-empty-lines": [
            "error",
            {
              "max": 1,
              "maxBOF": 2,
              "maxEOF": 0
            }
          ]
        }
      },
      {
        "files": [
          "*.{test,spec,cy}.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-empty-function": "off"
        }
      },
      {
        "parser": "",
        "files": [
          "cypress/**/*.js"
        ],
        "plugins": [
          "cypress"
        ],
        "env": {
          "cypress/globals": true
        }
      }
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "src/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,svelte}"
    ]
  },
  "dependencies": {
    "@types/testing-library__jest-dom": "^5.14.5",
    "eslint-plugin-cypress": "^2.12.1"
  }
}
