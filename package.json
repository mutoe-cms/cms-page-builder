{
  "name": "cms-page-builder",
  "private": true,
  "version": "0.4.0",
  "author": "mutoe <mutoe@foxmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutoe/cms-page-builder.git"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "type-check": "vue-tsc",
    "test:unit": "vitest",
    "test:component": "cypress run --component --config-file cypress/cypress.config.ts",
    "test:e2e": "cypress run --e2e --config-file cypress/cypress.config.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "pnpm changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@mutoe/eslint-config-preset-vue": "^2.2.0",
    "@testing-library/cypress": "^9.0.0",
    "@types/node": "^18",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.28.3",
    "cypress": "^12.4.1",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "sass": "^1.57.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.28.3",
    "vue-tsc": "^1.0.24"
  },
  "lint-staged": {
    "src": "eslint --fix"
  },
  "eslintConfig": {
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "sourceType": "module",
      "extraFileExtensions": [
        ".vue"
      ]
    },
    "env": {
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "@mutoe/eslint-config-preset-vue"
    ],
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "rules": {
          "no-undef": "off",
          "vue/no-setup-props-destructure": "off",
          "func-call-spacing": "off"
        }
      },
      {
        "files": [
          "*.{test,spec,cy}.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ]
  }
}
