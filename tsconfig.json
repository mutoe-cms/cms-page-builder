{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "types": [
      "svelte",
      "jest",
      "@testing-library/jest-dom"
    ],
    "typeRoots": ["node_modules/@types", "src/types"],
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "cypress/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ]
}
